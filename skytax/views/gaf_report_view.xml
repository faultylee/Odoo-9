<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <!--GAF search view-->
    <record model="ir.ui.view" id="gaf_search">
        <field name="name">gaf.search</field>
        <field name="model">gaf.report</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
          <search string = "GAF Search">
            <field name="name" string = "Name"/>
            <field name="company_id"/>
<!--
            <field name="fiscalyear_id"/>
-->
           </search>
        </field>
    </record>
    
    <!--GAF tree View-->
    <record id="gaf_tree" model="ir.ui.view">
        <field name="name">gaf.report.tree</field>
        <field name="model">gaf.report</field>
        <field name="arch" type="xml">
            <tree string="GAF Report">  
                <field name="name"/>  
                <field name="company_id"/>
<!--
                <field name="fiscalyear_id"/>
-->
				<field name="write_date"/>
            </tree>
        </field>
    </record>
    
    <!--GAF Report Form View-->
    <record id="gaf_report_form" model="ir.ui.view">
        <field name="name">gaf.report.form</field>
        <field name="model">gaf.report</field>
        <field name="arch" type="xml">
            <form string="GAF Report" version="7.0">  
                <sheet>
                    <group>
                        <field name="company_id"/>
<!--
                        <field name="fiscalyear_id"/>
-->
                    </group>
                    <group>
                        <field name="filter"/>
                    </group>
                    <group string="Dates"  attrs="{'invisible':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}">
                        <field name="date_from" />
                        <field name="date_to" />
                    </group>
<!--
                    <group string="Periods" attrs="{'invisible':[('filter','!=','filter_period')], 'required':[('filter', '=', 'filter_period')]}">
                        <field name="period_from" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                        <field name="period_to" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                    </group>
-->
                    <group>
                        <field name="write_date"/>
                        <field name="name" />
                        <field name="data"/>
                    </group>
                    <button  icon="gtk-print" type="object" name="generate_txt" string="Generate"/> 
                </sheet>
            </form>
        </field>
    </record>
    
    <!--GAF Action-->
    <record id="action_gaf_report" model="ir.actions.act_window">
        <field name='name'>GST Audit File(GAF) Report</field>
        <field name='res_model'>gaf.report</field>
        <field name='view_type'>form</field>
        <field name='view_mode'>tree,form</field>
    </record>
        
    <!--GAF Menu-->
    <menuitem name="GST Reports" parent="account.menu_finance" sequence = "3" id="menu_report_gst"/>
    <menuitem name="GAF Report" parent="menu_report_gst" sequence = "3" 
        action="action_gaf_report" id="menu_gaf_report"/>
        
</data>
</openerp>
